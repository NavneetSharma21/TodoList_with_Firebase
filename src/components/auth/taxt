  const updateAfterDragAndDrop = async (taskId, newTodoList) => {
        try {
            const dataBase = collection(DbStore, "Tasks")
            const querySnapshot = await getDocs(dataBase)
            const lists = querySnapshot.docs.map(async (document) => {
                if (document.id === taskId) {
                    console.log(document.id)
                    await updateDoc(doc(DbStore, "Tasks", taskId), {
                        todoList: newTodoList
                    }
                    );
                    console.log("firebase update success")          
                }
            })
            return lists;
        } catch (error) {
            console.error("field to drag Update", error.message);
        }
    }



    const updateAfterDragAndDrop = async (taskId, newTodoList) => {
        try {
             const q = query(collection(DbStore, 'Tasks'));
             const querySnapshot = await getDocs(q);
             querySnapshot.forEach( async (docs) => {
                if(docs.id === taskId){
                    await updateDoc(doc(DbStore, 'Tasks', docs.id), {
                        todoList: newTodoList
                      });
                }             
             });
            console.log("firebase update success")
        } catch (error) {
            console.error("field to drag Update", error.message);
        }
    }